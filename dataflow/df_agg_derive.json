{
	"name": "df_agg_derive",
	"properties": {
		"description": "dataflow is created to learn aggregator and derive activity",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Movies_DS1",
						"type": "DatasetReference"
					},
					"name": "MoviesV1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> MoviesV1",
				"MoviesV1 derive(Year = toInteger(trim(right(title, 6), '()')),",
				"          Title = toString(left(title, length(title)-6))) ~> derivedColumn1"
			]
		}
	}
}